
<%= form_for([@user, @userdetail]) do |f| %>
  <% if @userdetail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@userdetail.errors.count, "error") %> prohibited this userdetail from being saved:</h2>

      <ul>
      <% @userdetail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :line1, 'Address Line 1' %><br>
    <%= f.text_field :line1, class: 'form-control' , placeholder: 'Street address, P.O. box, company name, c/o' %>
  </div>
  <div class="field">
    <%= f.label :line2, 'Address Line 2' %><br>
    <%= f.text_field :line2, class: 'form-control', placeholder: 'Apartment, suite , unit, building, floor, etc.' %>
  </div>
  <div class="field">
    <%= f.label :city, 'City/Town' %><br>
    <%= f.text_field :city , class: 'form-control', placeholder: 'city'%>
  </div>
  <div class="field">
    <%= f.label :state, 'state/province/region' %><br>
    <%= f.text_field :state, class: 'form-control', placeholder: 'state/province/region' %>
  </div>
  <div class="field">
    <%= f.label :zip, 'ZIP/POSTAL' %><br>
    <%= f.number_field :zip, class: 'form-control', placeholder: 'zip or postal code' %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country, class: 'form-control', placeholder: 'country' %>
  </div>
  <div class="field">
    <%= f.label :contact_no %><br>
    <%= f.text_field :contact_no, class: 'form-control', placeholder: 'Your contact phone or mobile number' %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary btn-lg'%>
  </div>
<% end %>
